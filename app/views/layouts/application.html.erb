<!DOCTYPE html>
<html>
<head>
  <title>National Water Service</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <ul class="nav navbar-nav">
          <li class="active"><%= link_to "Home", '/' %></li>
          <li><%= link_to "Residential", '/residential' %></li>
          <li><%= link_to "Commercial", '/commercial' %></li>
          <li><%= link_to "Services Provided", '/services' %></li>
          <li><%= link_to "Products", '/' %></li>
          <li><%= link_to "Discounts", '/discounts' %></li>
          <li><%= link_to "About", '/about' %></li>
          <li><%= link_to "Contact", '/contact' %></li>
        </ul>
      </div>
    </div>
  </nav>
  <% if current_user %>
    <h3>|<%= current_user.name %> || <a href="/">HOME</a> || <%= link_to "Logout", '/logout' %>|</h3>
  <% end %>

<%= yield %>

</body>
</html>
