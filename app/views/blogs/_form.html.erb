<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="new_blog_form">
    <div class="new_blog_title">
      <h3>Title!</h3>
      <%= f.text_area :title %>
    </div>
    <br>
    <div class="new_blog_content">
      <h3>Content!</h3>
      <%= f.text_area :content %>
    </div>
    <br/>
  </div>
  <div class="new_blog_author">
    <h3>Author</h3>
    <%= f.text_area :author, value: "#{current_user.name}" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
