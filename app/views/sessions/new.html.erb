<div id="login_form">
  <h1>Login</h1>
  <br>
  <%= form_tag '/login' do %>

    <h3>Email: </h3>
    <%= text_field_tag :email, " ", class: "form-control"  %><br>
    <h3>Password: </h3>
    <%= password_field_tag :password, "", class: "form-control" %><br>
    <%= submit_tag "Submit", class: 'btn btn-default btn-lg' %>

  <% end %>
</div>
